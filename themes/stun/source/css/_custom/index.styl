body {
    font-family: sans-serif, Arial;
}

.header-nav-menu-item{
}

.header-nav-menu-item__link:hover{
    background: none;
    color: #49b1f5;
}

.header-banner-info__title {
    font-size: 2.5rem;
}

.header-banner-info__subtitle {
    font-family: Courier;
}

.sidebar-ov-author {
}

.sidebar-ov-author__avatar {
    width: auto;
    height: auto;
}

.sidebar-ov-author__avatar_img {
    height: 264px;
    padding: 2px;
    border: 2px solid #d3d3d3;
    border-radius: 1px;
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.12);
    background: linear-gradient(135deg, rgba(73, 177, 245, 0.12), rgba(42, 139, 216, 0.08));
}

.sidebar-ov-state-item:not(:last-child) {
    border: none;
}

::-moz-selection { /* Code for Firefox */
  color: white;
  background: blue;
}

::selection {
  color: white;
  background: blue;
}

// Custom scrollbars (WebKit)
*::-webkit-scrollbar
  width: 10px
  height: 10px

*::-webkit-scrollbar-track
  background: rgba(0, 0, 0, 0.06)
  border-radius: 8px

*::-webkit-scrollbar-thumb
  background: linear-gradient(135deg, #49b1f5 0%, #2a8bd8 100%)
  border-radius: 8px

*::-webkit-scrollbar-thumb:hover
  background: linear-gradient(135deg, #5cc2ff 0%, #3b9de6 100%)

// Custom scrollbars (Firefox)
*
  scrollbar-width: thin
  scrollbar-color: #49b1f5 rgba(0, 0, 0, 0.06)

@media (max-width: 1100px) {
    .header-banner-info__title {
        font-size: 1.4rem;
    }
}

